<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Basic theme -->
    <style name="NewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGrayBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkGrayBlue</item>
        <item name="colorAccent">@color/deepSkyBlue</item>
    </style>

    <!-- Emerge and  Disappear Dialog-->
    <style name="DialogAnim" parent="@android:style/Animation.Dialog">
        <item name ="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name ="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <!-- Dialog exit style -->
    <style name="DialogExit" parent="android:style/Theme.Dialog">
        <!-- background transparent -->
        <item name = "android:windowBackground">@android:color/transparent</item>
        <item name = "android:windowContentOverlay">@null</item>
        <!-- 悬浮于Activity -->
        <item name = "android:windowIsFloating">true</item>
        <!-- border frame -->
        <item name = "android:windowFrame">@null</item>
        <!-- vague effect -->
        <item name = "android:backgroundDimEnabled">true</item>
        <!-- no title -->
        <item name = "android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name = "android:windowIsTranslucent">true</item>
        <!-- point out the anim -->
        <item name = "android:windowAnimationStyle">@style/DialogAnim</item>
    </style>

    <!-- Dialog page menu style -->
    <style name="DialogPageMenu" parent="android:style/Theme.Dialog">
        <!-- background transparent -->
        <item name = "android:windowBackground">@android:color/transparent</item>
        <item name = "android:windowContentOverlay">@null</item>
        <!-- 悬浮于Activity -->
        <item name = "android:windowIsFloating">true</item>
        <!-- border frame -->
        <item name = "android:windowFrame">@null</item>
        <!-- vague effect -->
        <item name = "android:backgroundDimEnabled">false</item>
        <!-- no title -->
        <item name = "android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name = "android:windowIsTranslucent">false</item>
        <!-- point out the anim -->
        <item name = "android:windowAnimationStyle">@style/DialogAnim</item>
    </style>

    <style name="anim_menu" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/menu_in</item>
        <item name="android:windowExitAnimation">@anim/menu_out</item>
    </style>

    <style name="ButtonNoShadow" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_button_no_border_light</item>
    </style>

    <style name="ButtonNoShadowTransparent" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_button_no_border_transparent</item>
    </style>

</resources>
