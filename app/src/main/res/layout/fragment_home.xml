<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="@dimen/mini_edgeToBorder"
            android:background="@drawable/layout_border"
            android:id="@+id/layout_inputWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:maxLines="1"
                android:id="@+id/editText_website"
                android:textSize="20sp"
                android:layout_marginLeft="@dimen/viewToBorder"
                android:hint="@string/hint_website"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/img_commit"
                android:layout_marginRight="@dimen/viewToBorder"
                android:background="@drawable/ic_right_line_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <WebView
            android:id="@+id/webView_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>
